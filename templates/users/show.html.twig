{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
{% endblock %}

{% block body %}
<div id="user" class="album py-5 bg-body-success">
	<div class="container">
		<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 jumbotron">
				<div class="col">
					<div class="card shadow-sm">
						<div class="card-body">
							<p class="card-text">{{ user.username }}</p>
							<p class="card-text">
								{% for role in user.roles %}
									{{ role }}
									{% if not loop.last %}, {% endif %}
								{% endfor %}
							</p>
							<div class="d-flex justify-content-between align-items-center">
								<div class="btn-group">
									<a href="{{ path('app_users_index') }}" class="btn btn-primary">back to list</a>
                                    <a href="{{ path('app_users_edit', {'id': user.id}) }}" class="btn btn-success">edit</a>
                                    {{ include('users/_delete_form.html.twig') }}
								</div>
							</div>
						</div>
					</div>
				</div>
		</div>
	</div>
</div>
{% endblock %}
