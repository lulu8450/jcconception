{% extends 'base.html.twig' %}

{% block title %}Liste des Utilisateurs{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
{% endblock %}

{% block body %}
<h1 id="user">Users liste</h1>
<div class="album py-5 bg-body-success">
	<div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 jumbotron">
			{% for user in users %}
            <div class="col my-2">
				<div class="card shadow-sm">
					<div class="card-body">
						<p class="card-text">{{ user.username }}</p>
						<div class="d-flex justify-content-between align-items-center">
							<div class="btn-group">
								<a href="{{ path('app_users_show', {'id': user.id}) }}" class="btn btn-primary">show</a>
								<a href="{{ path('app_users_edit', {'id': user.id}) }}" class="btn btn-success">edit</a>
							</div>
						</div>
					</div>
				</div>
			</div>
			{% else %}
            <div class="col">
				<div class="card shadow-sm">
					<div class="card-body">
						<p class="card-text">Aucun Utilisateurs Trouver</p>
					</div>
				</div>
			</div>
            {% endfor %}
		</div>
	</div>
</div>
{% endblock %}
